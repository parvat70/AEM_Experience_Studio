<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Footer"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <socialLinks
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        eaem-max-items="2"
                        eaem-show-on-collapse="EAEM.showProductName"
                        fieldLabel="Social Media Link">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            name="./socialicons">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <path
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Please Provide Social Media Path"
                                            fieldLabel="Media Path"
                                            name="./path"/>
                                        <icon
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/select"
                                            fieldDescription="Select Social  Media Icon"
                                            fieldLabel="Select Social  Media Icon"
                                            name="./icon">
                                            <items jcr:primaryType="nt:unstructured">
                                                <facebook
                                                    jcr:primaryType="nt:unstructured"
                                                    text="facebook"
                                                    value="facebook--icon"/>
                                                <instagram
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Instagram"
                                                    value="instagram--icon"/>
                                                <linkedin
                                                    jcr:primaryType="nt:unstructured"
                                                    text="linkedin"
                                                    value="linkedin--icon"/>
                                                <twitter
                                                    jcr:primaryType="nt:unstructured"
                                                    text="twitter"
                                                    value="twitter--icon"/>
                                                <email
                                                    jcr:primaryType="nt:unstructured"
                                                    text="email"
                                                    value="email--icon"/>
                                            </items>
                                        </icon>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </socialLinks>
                    <contact
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        eaem-max-items="2"
                        eaem-show-on-collapse="EAEM.showProductName"
                        fieldLabel="Footer Details">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            name="./contactinfo">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <shortname
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Country Short Name"
                                            fieldLabel="Country Short Name"
                                            name="./shortname"/>
                                        <fullname
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Country Full Name"
                                            fieldLabel="Country Full Name"
                                            name="./fullname"/>
                                        <phone
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Phone"
                                            fieldLabel="Phone"
                                            name="./phone"/>
                                        <image
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="Provide Flag Image Path"
                                            fieldLabel="Flag Image Path"
                                            name="./image"
                                            rootPath="/content/dam"/>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </contact>
                    <footerlogo
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldDescription="Provide Footer  Logo"
                        fieldLabel="Footer Logo"
                        name="./footerlogo"
                        rootPath="/content/dam"/>
                    <copyright
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldDescription="Provide Copyright Path"
                        fieldLabel="Copyright"
                        name="./copyright"
                        rootPath="/content/dam"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
