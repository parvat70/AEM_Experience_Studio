<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Cards"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <cards
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        eaem-max-items="3"
                        eaem-min-items="1"
                        eaem-show-on-collapse="EAEM.showProductName"
                        fieldLabel="Cards"
                        maxlinksallowed="3">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            name="./cards">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <title
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Title"
                                            fieldLabel="Card Title"
                                            name="./title"/>
                                        <image
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="Select Path"
                                            fieldLabel="Card Image"
                                            name="./image"
                                            rootPath="/content/dam/dxp-experience-studio"/>
                                        <description
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                            fieldDescription="Description"
                                            fieldLabel="Card Description"
                                            name="./description"/>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </cards>
                    <variation
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/select"
                        fieldDescription="Select Overlay Variation"
                        fieldLabel="Overlay Variation"
                        name="./variation">
                        <items jcr:primaryType="nt:unstructured">
                            <variation1
                                jcr:primaryType="nt:unstructured"
                                text="Double Card"
                                value="card--double"/>
                            <variation2
                                jcr:primaryType="nt:unstructured"
                                text="Card Triple"
                                value="card--triple"/>
                            <variation3
                                jcr:primaryType="nt:unstructured"
                                text="Card Double Bottom Right"
                                value="card--double bottom--right"/>
                            <variation4
                                jcr:primaryType="nt:unstructured"
                                text="Card Triple Bottom Right"
                                value="card--triple bottom--right"/>
                            <variation5
                                jcr:primaryType="nt:unstructured"
                                text="Card Double Top Left"
                                value="card--double top--left"/>
                            <variation6
                                jcr:primaryType="nt:unstructured"
                                text="Card Triple Top Left"
                                value="card--triple top--left"/>
                            <variation7
                                jcr:primaryType="nt:unstructured"
                                text="Card Double Top Right"
                                value="card--double top--right"/>
                            <variation8
                                jcr:primaryType="nt:unstructured"
                                text="Card Triple Top Right"
                                value="card--triple top--right"/>
                            <variation9
                                jcr:primaryType="nt:unstructured"
                                text="Card Double Solid Color"
                                value="card--double card--solid"/>
                            <variation10
                                jcr:primaryType="nt:unstructured"
                                text="Card Triple Card Solid"
                                value="card--triple card--solid"/>
                            <variation11
                                jcr:primaryType="nt:unstructured"
                                text="Solid Color Double Card Bottom Right"
                                value="card--double card--solid bottom--right"/>
                            <variation12
                                jcr:primaryType="nt:unstructured"
                                text="Solid Color Triple Card Bottom Right"
                                value="card--triple card--solid bottom--right"/>
                            <variation13
                                jcr:primaryType="nt:unstructured"
                                text="Solid Color Double Card Top Right"
                                value="card--double card--solid top--left"/>
                            <variation14
                                jcr:primaryType="nt:unstructured"
                                text="Solid Color Triple Card Top left"
                                value="card--triple card--solid top--left"/>
                            <variation15
                                jcr:primaryType="nt:unstructured"
                                text="Solid Color Double Card Top Right"
                                value="card--double card--solid top--right"/>
                            <variation16
                                jcr:primaryType="nt:unstructured"
                                text="Solid color Triple Card Top Right"
                                value="card--triple card--solid top--right"/>
                        </items>
                    </variation>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
