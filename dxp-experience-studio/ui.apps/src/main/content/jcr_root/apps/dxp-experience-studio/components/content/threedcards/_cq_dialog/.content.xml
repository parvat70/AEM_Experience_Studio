<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="3DCards"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <threedcards
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        eaem-max-items="3"
                        eaem-min-items="1"
                        eaem-show-on-collapse="EAEM.showProductName"
                        fieldLabel="Cards"
                        maxlinksallowed="3">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            name="./threedcards">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <title
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Title"
                                            fieldLabel="Card Title"
                                            name="./title"/>
                                        <image
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="Select Path"
                                            fieldLabel="Card Image"
                                            name="./image"
                                            rootPath="/content/dam/dxp-experience-studio"/>
                                        <description
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                            fieldDescription="Please Provide Description"
                                            fieldLabel="Card Description"
                                            name="./description"/>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </threedcards>
                    <variation
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/select"
                        fieldDescription="Select Overlay Variation"
                        fieldLabel="Overlay Variation"
                        name="./variation">
                        <items jcr:primaryType="nt:unstructured">
                            <variation1
                                jcr:primaryType="nt:unstructured"
                                text="Card Single"
                                value="card--single"/>
                            <variation2
                                jcr:primaryType="nt:unstructured"
                                text="Card Single bottom Right"
                                value="card--single bottom--right"/>
                            <variation3
                                jcr:primaryType="nt:unstructured"
                                text="Card Single Card Solid"
                                value="card--single card--solid"/>
                            <variation4
                                jcr:primaryType="nt:unstructured"
                                text="Card Single Card Solid Bottom Right"
                                value="card--single card--solid bottom--right"/>
                        </items>
                    </variation>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
